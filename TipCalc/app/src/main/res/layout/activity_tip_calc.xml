<TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TipCalc"
    android:background="#dadacc"
    android:id="@+id/tableLayout"
    android:shrinkColumns="1,2,3">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableRow0"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bill Total"
            android:id="@+id/BillTextView"
            android:textColor="#000"
            android:paddingRight="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/billEditText"
            android:layout_span="3"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableRow1"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10%"
            android:id="@+id/tenTextView"
            android:textColor="#000"
            android:layout_column="1"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15%"
            android:id="@+id/fifteenTextView"
            android:textColor="#000"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20%"
            android:id="@+id/twentyTextView"
            android:textColor="#000"
            android:layout_gravity="center" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableRow2"
        android:paddingRight="5dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tip"
            android:id="@+id/tipTextView"
            android:textColor="#000" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/tip10EditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/tip15EditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/tip20EditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableRow3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total"
            android:id="@+id/totalTextView"
            android:textColor="#000"
            android:paddingRight="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/total10EditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/total15EditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/total20EditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableRow4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Custom"
            android:id="@+id/customTextView"
            android:textColor="#000"
            android:paddingRight="5dp" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="30"
            android:progress="18"
            android:id="@+id/customseekBar"
            android:layout_span="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="18%"
            android:id="@+id/customTipTextView"
            android:textColor="#000" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableRow5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tip"
            android:id="@+id/TipcustomTextView"
            android:textColor="#000"
            android:paddingRight="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/tipCustomEditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:focusable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total"
            android:id="@+id/Total"
            android:textColor="#000"
            android:paddingBottom="5dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:text="0.00"
            android:id="@+id/totalCustomEditText"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:focusable="false" />
    </TableRow>
</TableLayout>
